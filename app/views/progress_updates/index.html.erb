<div>
  <nav class="nav">
    <a class="nav-link active" href="#">PROGRESS UPDATES</a>
    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">PHOTOS</a>
    <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">VIDEOS</a>
  </nav>

  <%= form_with model: @progress_update, local: true do |f| %>
    <% if @progress_update.errors.full_messages.any? %>
      <p class="errors"><%= "Post could not be saved. #{@progress_update.errors.full_messages.join('. ')}" %></p>
    <% end %>

    <div class="form-group">
      <%= f.label :text, 'ADD PROGRESS' %>
      <%= f.text_field :text, class:"form-control" placeholder: 'Write new progress update' %>
    </div>

    <%= f.submit 'Share Progress', class: "btn btn-primary" %>
  <% end %>

  <section class="community-updates">
    <h2>COMMUNITY PROGRESS UPDATES</h2>

    <%= render @community_progress_updates %>
  </section>
</div>

<div>
  <section class="who-to-follow">
    <h2>WHO TO FOLLOW</h2>

    <%= render current_user.users_to_follow %>
  </section>
</div>

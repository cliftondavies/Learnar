<li class="media mb-3">
  <%= user_photo(user, size: 45, class: "rounded-circle mr-2") %>

  <div class="media-body align-self-center">
    <h5 class="mt-0 mb-1">
      <%= link_to user.full_name, user_path(user), class: 'text-decoration-none' %>
      <%# link_to user_subtext(user), user_path(user) %>
      <span><%= user_subtext(user) %></span>
    </h5>

    <%= follow_or_unfollow_btn(user) %>
  </div>
</li>

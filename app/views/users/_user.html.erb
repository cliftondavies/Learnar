<ul class="list-unstyled">
  <li class="media">
    <%= user_photo(user, class: "rounded-circle") %>

    <div class="media-body">
      <h5 class="mt-0 mb-1">
        <%= link_to user.full_name, user_path(user) %>
        <%= link_to user_subtext(user), user_path(user) %>
      </h5>
      <%= follow_or_unfollow_btn(user) %>
    </div>
  </li>
</ul>
